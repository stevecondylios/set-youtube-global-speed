{
  "manifest_version": 3,
  "name": "Set YouTube Global Speed",
  "description": "Automatically set all videos across YouTube to play at 1.5x speed",
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
